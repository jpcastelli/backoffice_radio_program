{% extends 'VorterixBackendBundle::layout.html.twig' %}
{% block title %}Vorterix :: Secciones{% endblock %}
{% block section_title %}Vorterix :: Secciones{% endblock %}
{% block javascripts %}
{{parent()}}
<script type="text/javascript">
    $(function() {
        $('#add-section').click(function(){
            $(location).attr('href','{{ url('VorterixBackendBundle_section_new') }}');
        });
    });
</script>
{% endblock %}
{% block content %}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listado de Secciones</h3>
                <div class="box-tools">
                    <div class="input-group">                   
                        <div class="input-group-btn">
                            <button id="add-section" class="btn btn-warning pull-right">Agregar Seccion</button>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>ID</th>
                        <td></td>
                        <th>Seccion</th>
                        <td></td>
                    </tr>
                    {% for section in sections %}
                    <tr>
                        <td>{{ section.id }}</td>
                        <td>{% if section.cover %}<img src="{{ asset('uploads/section/cover/') }}{{ section.cover }}" width="70" height="70" />{% endif %}
                        <td>{{ section.name }}</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">Action</button>
                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ url('VorterixBackendBundle_section_edit') }}/{{ section.id }}">Editar</a></li>
                                    <li><a href="{{ url('VorterixBackendBundle_section_delete') }}/{{ section.id }}">Eliminar</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
{% endblock %}
